<%= form_for [topic, item] do |f|  %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true, class: 'form-control', placeholder: "Enter Name of Item" %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, rows: 8, class: 'form-control', placeholder: "Enter a brief Description" %>
  </div>

  <div class="form-group">
    <%= f.label :brand %>
    <%= f.text_field :brand, class: 'form-control', placeholder: "Item Brand" %>
  </div>
  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success' %>
  </div>
<% end %>
