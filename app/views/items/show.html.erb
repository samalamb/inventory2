<div class="row">
  <div class="col-md-6 col-md-offset-2">
    <h1><%= @item.name %></h1>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-2">
    <h4><%= @item.brand %></h4>
    <p><%= @item.description %></p>
  </div>

  <div class="col-md-2">
    <%= link_to "Edit", edit_topic_item_path(@item.topic, @item), class: 'btn btn-success' %>
    <%= link_to "Delete Item", [@item.topic, @item], method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want to delete this item?'} %>
  </div>
</div>
