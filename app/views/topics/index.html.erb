
<div class="row">
  <div class="col-md-8 col-md-offset-1">
    <h1>Rooms</h1>
  </div>
</div>

<div class="row">
  <div class="col-md-8 col-md-offset-1">

    <% @topics.each do |topic| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to topic.name, topic %>
          </h4>
        </div>
      </div>
    <% end %>
  </div>

  <div class="col-md-3">
    <%= link_to "New Room", new_topic_path, class: 'btn btn-success' %>
  </div>
</div>
