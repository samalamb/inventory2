<div class="row">
  <div class="col-md-6 col-md-offset-1">
    <h1><%= @topic.name %></h1>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-1">
    <%= link_to "Edit Room", edit_topic_path, class: 'btn btn-success' %>
    <%= link_to "Delete Room", @topic, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this topic?' } %>
  </div>
</div>

<br>

<div class="row">
  <div class="col-md-6 col-md-offset-1">
    <% @topic.items.each do |item| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to item.name, topic_item_path(@topic, item) %>
          </h4>
        </div>
      </div>
    <% end %>
  </div>

  <div class="col-md-2 col-md-offset-3">
    <%= link_to "New Item", new_topic_item_path(@topic), class: 'btn btn-success' %>
  </div>
</div>
