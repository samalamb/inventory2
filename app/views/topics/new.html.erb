<div class="col-md-4 col-md-offset-4">
  <h2>Add Room</h2>
</div>
 <div class="row">
   <div class="col-md-4 col-md-offset-4">
     <%= form_for @topic do |f|  %>
       <div class="form-group">
         <%= f.label :name %>
         <%= f.text_field :name, autofocus: true, class: 'form-control', placeholder: "Enter Name of Item" %>
       <br>

       <div class="form-group">
         <%= f.submit "Save", class: 'btn btn-success' %>
       </div>
     <% end %>
   </div>
 </div>
